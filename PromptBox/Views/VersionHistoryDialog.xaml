<Window x:Class="PromptBox.Views.VersionHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Version History" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <materialDesign:DialogHost Identifier="VersionHistoryDialog">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Version History" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock x:Name="PromptTitleText"
                       FontSize="14" 
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Version List -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="VERSIONS" 
                               FontWeight="SemiBold" 
                               Margin="12,12,12,8"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <ListBox Grid.Row="1"
                             x:Name="VersionList"
                             SelectionChanged="VersionList_SelectionChanged"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,4">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="History" 
                                                                 VerticalAlignment="Center" 
                                                                 Margin="0,0,8,0"
                                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        <TextBlock Text="{Binding ChangeDescription}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding SavedDate, StringFormat='MMM dd, yyyy HH:mm'}" 
                                               FontSize="11"
                                               Margin="24,2,0,0"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <TextBlock Grid.Row="1"
                               x:Name="EmptyStateText"
                               Text="No version history yet.&#x0a;Versions are saved when you edit a prompt."
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>
            
            <!-- Diff View -->
            <Border Grid.Column="1"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="16,12">
                        <TextBlock Text="CHANGES IF RESTORED" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Border Background="#2E7D32" CornerRadius="2" Padding="8,2" Margin="0,0,8,0">
                                <TextBlock Text="+ Will be restored" FontSize="11" Foreground="White"/>
                            </Border>
                            <Border Background="#C62828" CornerRadius="2" Padding="8,2">
                                <TextBlock Text="- Will be removed" FontSize="11" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
                        <RichTextBox x:Name="DiffViewer"
                                     IsReadOnly="True"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Margin="16,0"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Close" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Close_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="RestoreButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Restore_Click"
                    IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Restore" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Restore This Version"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
    </materialDesign:DialogHost>
</Window>
