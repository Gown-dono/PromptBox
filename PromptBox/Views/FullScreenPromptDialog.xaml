<Window x:Class="PromptBox.Views.FullScreenPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Prompt View" 
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignCardBackground}" 
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TitleText"
                               Text="Step Output"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <!-- View Toggle -->
                    <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                        <RadioButton x:Name="SplitViewRadio"
                                     Content="Split View"
                                     GroupName="ViewMode"
                                     IsChecked="True"
                                     Checked="ViewMode_Changed"
                                     Style="{StaticResource MaterialDesignTabRadioButtonBottom}"
                                     Margin="0,0,8,0"/>
                        <RadioButton x:Name="RawViewRadio"
                                     Content="Raw Text"
                                     GroupName="ViewMode"
                                     Checked="ViewMode_Changed"
                                     Style="{StaticResource MaterialDesignTabRadioButtonBottom}"
                                     Margin="0,0,8,0"/>
                        <RadioButton x:Name="PreviewViewRadio"
                                     Content="Preview Only"
                                     GroupName="ViewMode"
                                     Checked="ViewMode_Changed"
                                     Style="{StaticResource MaterialDesignTabRadioButtonBottom}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Copy"
                            Click="CopyButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Close"
                            Click="CloseButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="RawColumn" Width="*"/>
                <ColumnDefinition x:Name="SplitterColumn" Width="Auto"/>
                <ColumnDefinition x:Name="PreviewColumn" Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Raw Text Pane -->
            <Border x:Name="RawPane" Grid.Column="0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}" Padding="12,8">
                        <TextBlock Text="RAW TEXT" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Border>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="ContentTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 Padding="16"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter x:Name="Splitter" Grid.Column="1" Width="8" 
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeWE"/>
            
            <!-- Markdown Preview Pane -->
            <Border x:Name="PreviewPane" Grid.Column="2"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}" Padding="12,8">
                        <TextBlock Text="MARKDOWN PREVIEW" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Border>
                    <WebBrowser x:Name="MarkdownPreview" Grid.Row="1"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
