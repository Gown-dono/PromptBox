<Window x:Class="PromptBox.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tab Control -->
        <TabControl Grid.Row="0" 
                    Style="{StaticResource MaterialDesignFilledTabControl}">
            
            <!-- Import/Export Tab -->
            <TabItem Header="Import / Export">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <!-- Prompts Section -->
                        <TextBlock Text="PROMPTS" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Content="Export All Prompts (JSON)"
                                    x:Name="ExportPromptsButton"
                                    Click="ExportPrompts_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="1"
                                    Content="Import Prompts (JSON)"
                                    x:Name="ImportPromptsButton"
                                    Click="ImportPrompts_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="8,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Basic import/export of prompts without version history."
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Prompts with History Section -->
                        <TextBlock Text="PROMPTS WITH VERSION HISTORY" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Content="Export with History"
                                    x:Name="ExportWithHistoryButton"
                                    Click="ExportWithHistory_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="1"
                                    Content="Import with History"
                                    x:Name="ImportWithHistoryButton"
                                    Click="ImportWithHistory_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="8,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Full backup including all version history for each prompt."
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Workflows Section -->
                        <TextBlock Text="WORKFLOWS" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Content="Export Workflows"
                                    x:Name="ExportWorkflowsButton"
                                    Click="ExportWorkflows_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="1"
                                    Content="Import Workflows"
                                    x:Name="ImportWorkflowsButton"
                                    Click="ImportWorkflows_Click"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="8,0,0,0"/>
                        </Grid>
                        
                        <TextBlock Text="Export/import custom workflows (user-created only, not built-in)."
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- About Tab -->
            <TabItem Header="About">
                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="PromptBox" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBlock Text="AI Prompt Manager" 
                               FontSize="14"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,4,0,16"/>
                    <TextBlock Text="A modern desktop application for managing, organizing, and enhancing AI prompts with version history, workflows, and AI-powered tools."
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Built with WPF, .NET 8, and Material Design"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,0,0,20"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Github" 
                                                 Width="18" Height="18" 
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesignBody}"
                                                 Margin="0,0,8,0"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="https://github.com/Gown-dono/PromptBox"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                https://github.com/Gown-dono/PromptBox
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="StatusText" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            
            <Button Grid.Column="1"
                    Content="Close" 
                    Click="CloseButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"/>
        </Grid>
    </Grid>
</Window>
