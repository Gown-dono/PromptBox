<Window x:Class="PromptBox.Views.LibraryBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Prompt Library" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Prompt Library" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Browse and import pre-built prompt templates" 
                       FontSize="14" 
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Categories -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="CATEGORIES" 
                               FontWeight="SemiBold" 
                               Margin="12,12,12,8"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <ListBox x:Name="CategoryList"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <materialDesign:PackIcon Kind="Folder" 
                                                             VerticalAlignment="Center" 
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock Text="{Binding}" 
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
            
            <!-- Template List -->
            <Border Grid.Column="1"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0"
                             x:Name="SearchBox"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search templates..."
                             materialDesign:TextFieldAssist.HasLeadingIcon="True"
                             materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                             Margin="8"
                             Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <ListBox Grid.Row="1"
                             x:Name="TemplateList"
                             ItemsSource="{Binding FilteredTemplates}"
                             SelectedItem="{Binding SelectedTemplate}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,4">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Preview -->
            <Border Grid.Column="2"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Template Info -->
                    <StackPanel Grid.Row="0" Margin="16" x:Name="PreviewHeader">
                        <TextBlock Text="{Binding SelectedTemplate.Title}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="{Binding SelectedTemplate.Description}" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,4,0,8"/>
                        <ItemsControl ItemsSource="{Binding SelectedTemplate.Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource PrimaryHueMidBrush}" 
                                            CornerRadius="3" 
                                            Padding="6,2" 
                                            Margin="0,0,4,4">
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="10" 
                                                   Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Content Preview -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding SelectedTemplate.Content, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="16,0,16,16"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"/>
            <Button Content="Import Selected" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Import_Click"
                    IsEnabled="{Binding HasSelection}"/>
        </StackPanel>
    </Grid>
</Window>
