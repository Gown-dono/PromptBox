<Window x:Class="PromptBox.Views.TemplateSubmissionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Submit Template to Community" 
        Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Submit Template to Community" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Share your prompt template with the community" 
                       FontSize="14"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Template Title -->
                <TextBox x:Name="TitleBox"
                         Text="{Binding TemplateTitle, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Template Title *"
                         Margin="0,0,0,16"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Category -->
                <ComboBox x:Name="CategoryBox"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          IsEditable="True"
                          materialDesign:HintAssist.Hint="Category *"
                          Margin="0,0,0,16"
                          Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Description -->
                <TextBox x:Name="DescriptionBox"
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Description *"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"
                         Margin="0,0,0,16"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Content -->
                <TextBox x:Name="ContentBox"
                         Text="{Binding TemplateContent, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Template Content *"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="150"
                         FontFamily="Consolas"
                         Margin="0,0,0,16"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Tags -->
                <TextBox x:Name="TagsBox"
                         Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Tags (comma-separated)"
                         Margin="0,0,0,16"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Submitter Info -->
                <TextBox x:Name="SubmitterBox"
                         Text="{Binding SubmitterInfo, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Your Name or GitHub Username *"
                         Margin="0,0,0,16"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- License -->
                <ComboBox x:Name="LicenseBox"
                          ItemsSource="{Binding Licenses}"
                          SelectedItem="{Binding SelectedLicense}"
                          materialDesign:HintAssist.Hint="License *"
                          Margin="0,0,0,16"
                          Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Terms -->
                <CheckBox x:Name="TermsCheckBox"
                          IsChecked="{Binding AcceptedTerms}"
                          Margin="0,0,0,8">
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource MaterialDesignBody}">
                        I confirm this template is my original work or I have permission to share it, 
                        and I agree to release it under the selected license.
                    </TextBlock>
                </CheckBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"/>
            <Button Content="Submit Template" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Submit_Click"
                    IsEnabled="{Binding CanSubmit}"/>
        </StackPanel>
    </Grid>
</Window>
