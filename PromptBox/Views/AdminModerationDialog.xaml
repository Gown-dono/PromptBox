<Window x:Class="PromptBox.Views.AdminModerationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin - Submission Moderation" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        ResizeMode="CanResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Submission Moderation" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Review and approve community template submissions" 
                       FontSize="14"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Pending List -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="0,0,1,0"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Pending Submissions" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="{Binding PendingCount, StringFormat=' ({0})'}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <Button Content="Refresh" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Click="Refresh_Click"
                                Margin="8,0,0,0"
                                Padding="8,4"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding PendingSubmissions}"
                             SelectedItem="{Binding SelectedSubmission}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
                                    <TextBlock Text="{Binding Category}" 
                                               FontSize="12"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding Author, StringFormat='by {0}'}" 
                                               FontSize="11"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Detail View -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Visibility="{Binding HasSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding SelectedSubmission.Title}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="{DynamicResource PrimaryHueMidBrush}" 
                                CornerRadius="3" 
                                Padding="8,4" 
                                Margin="0,0,8,0">
                            <TextBlock Text="{Binding SelectedSubmission.Category}" 
                                       FontSize="12" 
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="{Binding SelectedSubmission.Author, StringFormat='by {0}'}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding SelectedSubmission.LicenseType, StringFormat=' â€¢ {0}'}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                    
                    <TextBlock Text="Description" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBlock Text="{Binding SelectedSubmission.Description}" 
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Content" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,16">
                        <TextBox Text="{Binding SelectedSubmission.Content, Mode=OneWay}" 
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 MaxHeight="300"
                                 VerticalScrollBarVisibility="Auto"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <TextBlock Text="Tags" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <ItemsControl ItemsSource="{Binding SelectedSubmission.Tags}" Margin="0,0,0,16">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource MaterialDesignDivider}" 
                                        CornerRadius="3" 
                                        Padding="8,4" 
                                        Margin="0,0,4,4">
                                    <TextBlock Text="{Binding}" FontSize="12" Foreground="{DynamicResource MaterialDesignBody}"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="Approve" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#4CAF50"
                                BorderBrush="#4CAF50"
                                Click="Approve_Click"
                                Margin="0,0,8,0"
                                Padding="24,8"/>
                        <Button Content="Reject" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#F44336"
                                BorderBrush="#F44336"
                                Click="Reject_Click"
                                Padding="24,8"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Footer -->
        <Button Grid.Row="2" 
                Content="Close" 
                Style="{StaticResource MaterialDesignFlatButton}"
                Click="Close_Click"
                HorizontalAlignment="Right"
                Margin="0,16,0,0"/>
    </Grid>
</Window>
