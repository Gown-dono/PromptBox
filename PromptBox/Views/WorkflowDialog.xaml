<Window x:Class="PromptBox.Views.WorkflowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Workflow Runner" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <materialDesign:DialogHost Identifier="WorkflowDialog">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesignCardBackground}" Padding="8,6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Model Selection -->
                <TextBlock Text="Model:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                <ComboBox x:Name="ModelSelector"
                          Width="180"
                          materialDesign:HintAssist.Hint="Select AI Model"
                          Style="{StaticResource MaterialDesignComboBox}"
                          Foreground="{DynamicResource MaterialDesignBody}"
                          Margin="0,0,16,0"/>
                
                <!-- Temperature Slider -->
                <TextBlock Text="Temperature:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                <Slider x:Name="TemperatureSlider" 
                        Width="80" 
                        Minimum="0" Maximum="1" 
                        Value="0.7"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="TemperatureSlider_ValueChanged"
                        ToolTip="Controls randomness. Lower = more focused, Higher = more creative"/>
                <TextBlock x:Name="TemperatureValue" 
                           Text="0.7" 
                           Width="30"
                           VerticalAlignment="Center"
                           Margin="4,0,16,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Max Tokens Slider -->
                <TextBlock Text="Max Tokens:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                <Slider x:Name="MaxTokensSlider" 
                        Width="80" 
                        Minimum="1024" Maximum="8192" 
                        Value="4096"
                        TickFrequency="512"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="MaxTokensSlider_ValueChanged"
                        ToolTip="Maximum tokens per step. Increase for longer responses."/>
                <TextBlock x:Name="MaxTokensValue" 
                           Text="4096" 
                           Width="40"
                           VerticalAlignment="Center"
                           Margin="4,0,16,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                
                <!-- Settings Button -->
                <Button x:Name="SettingsButton"
                        Content="{materialDesign:PackIcon Kind=Cog}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="AI Settings"
                        Click="SettingsButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Workflow Selection -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="16,12,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SELECT WORKFLOW" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="CreateWorkflowButton"
                                    Content="{materialDesign:PackIcon Kind=Plus}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="28" Height="28"
                                    ToolTip="Create New Workflow"
                                    Click="CreateWorkflow_Click"/>
                            <Button x:Name="EditWorkflowButton"
                                    Content="{materialDesign:PackIcon Kind=Pencil}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="28" Height="28"
                                    ToolTip="Edit Selected Workflow"
                                    Click="EditWorkflow_Click"
                                    IsEnabled="False"/>
                            <Button x:Name="DeleteWorkflowButton"
                                    Content="{materialDesign:PackIcon Kind=Delete}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Foreground="#D32F2F"
                                    Width="28" Height="28"
                                    ToolTip="Delete Selected Workflow"
                                    Click="DeleteWorkflow_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                    
                    <ListBox x:Name="WorkflowList"
                             Grid.Row="1"
                             Margin="8"
                             SelectionChanged="WorkflowList_SelectionChanged"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0,2">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="14"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                                            <Border Grid.Column="1" 
                                                    Background="{DynamicResource PrimaryHueLightBrush}" 
                                                    CornerRadius="3" 
                                                    Padding="6,2"
                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="Built-in" FontSize="10" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="12" 
                                                   TextWrapping="Wrap"
                                                   MaxHeight="40"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   Margin="0,4,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <materialDesign:PackIcon Kind="LayersTriple" 
                                                                     VerticalAlignment="Center" 
                                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                     Width="14" Height="14"/>
                                            <TextBlock Text="{Binding Steps.Count, StringFormat='{}{0} steps'}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       Margin="4,0,0,0"
                                                       VerticalAlignment="Center"/>
                                            <Border Background="{DynamicResource MaterialDesignDivider}" 
                                                    Width="1" Height="12" 
                                                    Margin="8,0"/>
                                            <TextBlock Text="{Binding Category}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Right Panel - Workflow Execution -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Input Section -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="INPUT" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,0,0,8"/>
                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <TextBox x:Name="InputTextBox"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="120"
                                 Padding="12"
                                 FontFamily="Consolas"
                                 BorderThickness="0"
                                 materialDesign:HintAssist.Hint="Enter your code, problem description, or requirements here..."
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Background="Transparent"/>
                    </Border>
                </StackPanel>
                
                <!-- Progress Section -->
                <StackPanel Grid.Row="1" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="WORKFLOW PROGRESS" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ProgressText"
                                       Text=""
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="RunButton"
                                    Content="Run Workflow"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="RunButton_Click"
                                    Margin="0,0,8,0"/>
                            <Button x:Name="CancelButton"
                                    Content="Cancel"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="CancelButton_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                    
                    <ProgressBar x:Name="WorkflowProgress"
                                 Height="8"
                                 Margin="0,12,0,0"
                                 Value="0"
                                 Maximum="100"/>
                    
                    <!-- Visual Execution View (only for custom workflows, collapsed by default) -->
                    <Expander x:Name="VisualExecutionExpander"
                              Margin="0,12,0,0"
                              IsExpanded="False"
                              Visibility="Collapsed">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GraphOutline" 
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="Visual Execution Flow" 
                                           FontSize="12"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Expander.Header>
                        <Border x:Name="VisualExecutionView"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8"
                                MaxHeight="300">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Auto">
                                <Canvas x:Name="ExecutionCanvas" 
                                        MinHeight="200"
                                        MinWidth="600"
                                        Background="Transparent"/>
                            </ScrollViewer>
                        </Border>
                    </Expander>
                    
                    <!-- Step Indicators (Legacy) -->
                    <Expander Header="Step Details" 
                              Foreground="{DynamicResource MaterialDesignBody}"
                              Margin="0,8,0,0" 
                              IsExpanded="False">
                        <ItemsControl x:Name="StepIndicators" Margin="0,8,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Expander>
                </StackPanel>
                
                <!-- Results Section -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="RESULTS" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="CopyResultButton"
                                    Content="Copy All"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="CopyResultButton_Click"
                                    Margin="0,0,8,0"/>
                            <Button x:Name="UseResultButton"
                                    Content="Use as Prompt"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="UseResultButton_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <TabControl x:Name="ResultTabs" 
                                Grid.Row="1" 
                                Margin="0,8,0,0"
                                Style="{StaticResource MaterialDesignTabControl}">
                        <TabControl.Resources>
                            <Style TargetType="TabPanel">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>
                            <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                            </Style>
                        </TabControl.Resources>
                        <TabControl.Template>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" 
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,1">
                                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                                      VerticalScrollBarVisibility="Disabled"
                                                      Background="{DynamicResource MaterialDesignCardBackground}">
                                            <TabPanel IsItemsHost="True" 
                                                      Background="Transparent"/>
                                        </ScrollViewer>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" 
                                                      ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </TabControl.Template>
                    </TabControl>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText"
                           Text="Select a workflow and enter your input to begin"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Content="Close"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
    </materialDesign:DialogHost>
</Window>
